@model CloudDebugger.Features.Logging.StdOutStdErrModel
@{
    ViewData["Title"] = "Cloud Debugger - Write a message Standard Output and Error";
}

<h4>Write a message Standard Output and Error</h4>
This tool will write a message to the standard output and standard error output stream. Useful to test your application logging setup.

<br>
<br>

<form asp-controller="Logging" asp-action="WriteToStdOutErr" method="post">


    <table class="table">
        <tr>
            <td class="col-md-2">
                Standard Output message
            </td>
            <td class="col-md-2">
                <input asp-for="StdOutMessage" style="min-width:50%" />
                <span asp-validation-for="StdOutMessage"></span><br />(Leave empty to not write to standard output)
            </td>
            <td class="col-md-8"></td>
        </tr>
        <tr>
            <td class="col-md-2">
                Standard error message
            </td>
            <td class="col-md-2">
                <textarea asp-for="StdErrMessage" rows="7" cols="70"></textarea>
                <span asp-validation-for="StdErrMessage"></span>
                <br />(Leave empty to not write to standard output)
            </td>
            <td class="col-md-8">
            </td>
        </tr>
        <tr>
            <td class="col-md-2">
            </td>
            <td class="col-md-10">
                <input type="submit" name="submit" value="Write message" /><br />
            </td>
        </tr>

    </table>

    <br>
    <br>



    @if (!String.IsNullOrWhiteSpace(Model?.Exception))
    {
        <div class="alert alert-danger" role="alert">
            <pre>@Model.Exception</pre>
        </div>
    }

    @if (!String.IsNullOrWhiteSpace(Model?.Message))
    {
        <b>@Model.Message</b>
    }

</form>



<h5>Resources</h5>
