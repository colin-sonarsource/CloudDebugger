@model CloudDebugger.Features.OpenTelemetry.SimpleCounterModel
@{
    ViewData["Title"] = "Cloud Debugger - Simple Counter";
}

<h4>Simple counter</h4>
This tool will create a custom counter named SimpleCounter and increment it by one.
<br /><a href="/OpenTelemetry">Back</a>

<br>
<br>

<form asp-controller="OpenTelemetry" asp-action="SimpleCounter" method="post">

    <input type="submit" name="submit" value="Increment Counter" /><br />


    @if (!String.IsNullOrWhiteSpace(Model?.Exception))
    {
        <div class="alert alert-danger" role="alert">
            <pre>@Model.Exception</pre>
        </div>
    }

    @if (!String.IsNullOrWhiteSpace(Model?.Message))
    {
        <b>@Model.Message</b>
    }

</form>

