@model CloudDebugger.Features.LogWorkspaceDataGenerator.LogWorkspaceModel
@{
    ViewData["Title"] = "Cloud Debugger - Send Customer Log Analytics Workspace";
}

<h3>Send Customer Log Analytics Workspace</h3>
This tool will generate and send 100 Customer log entries to a Log Analytics Workspace. Perfect for practicing fundamental KSQL queries.
<br>
<br>

<form asp-controller="LogWorkspaceDataGenerator" asp-action="SendCustomerData" method="post">


    <table class="table">
        <tr>
            <td class="col-md-2">WorkspaceId</td>
            <td class="col-md-10">
                <input asp-for="WorkspaceId" style="min-width:50%"><br />
                <span asp-validation-for="WorkspaceId"></span>
            </td>
        </tr>

        <tr>
            <td class="col-md-2">WorkspaceKey</td>
            <td class="col-md-6">
                <input asp-for="WorkspaceKey" style="min-width:90%"><br />
                <span asp-validation-for="WorkspaceKey"></span>
            </td>
            <td class="col-md-4"></td>
        </tr>
        <tr>
            <td class="col-md-2">Log Type<br />(table name)</td>
            <td class="col-md-6">
                <input asp-for="LogType" style="min-width:90%"><br />
                <span asp-validation-for="LogType"></span>
            </td>
            <td class="col-md-4"></td>
        </tr>
    </table>

    <br>
    <input type="submit" name="submit" value="Send log statements" /><br />

    @if (!String.IsNullOrWhiteSpace(Model.Exception))
    {
        <div class="alert alert-danger" role="alert">
            <pre>@Model.Exception</pre>
        </div>
    }

    @if (!String.IsNullOrWhiteSpace(Model.Message))
    {
        <b>@Model.Message</b>
    }

</form>


<br>
<br>

<h5>Resources</h5>
<ul>
    <li><a href="https://github.com/tndata/CloudDebugger/wiki/LogWorkspace">Documentation</a></li>
</ul>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

