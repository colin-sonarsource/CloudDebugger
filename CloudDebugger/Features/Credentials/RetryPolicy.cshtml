@using Azure.MyIdentity
@model CloudDebugger.Features.Credentials.ViewLogModel
@{
    ViewData["Title"] = "CloudDebugger - View the default retry policy";

    var options = new DefaultAzureCredentialOptions()
    {
    };
}

<h5>Default Retry Policy</h5>
This page will display the default retry policy for DefaultAzureCredential.
<br />

<br />
<a href="/Credentials">Back</a>
<br />
<br />

<h5>The policy</h5>
<table class="table table-bordered">
    <tr>
        <td>Delay</td>
        <td>@options.Retry.Delay</td>
    </tr>
    <tr>
        <td>MaxDelay</td>
        <td>@options.Retry.MaxDelay</td>
    </tr>
    <tr>
        <td>MaxRetries</td>
        <td>@options.Retry.MaxRetries</td>
    </tr>
    <tr>
        <td>Mode</td>
        <td>@options.Retry.Mode</td>
    </tr>
    <tr>
        <td>NetworkTimeout</td>
        <td>@options.Retry.NetworkTimeout</td>
    </tr>
    <tr>
        <td>RetryPolicy</td>
        <td>@options.RetryPolicy</td>
    </tr>
</table>
